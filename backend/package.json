{
  "name": "crosswalk-backend",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch local/server.ts",
    "start": "bun run local/server.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:vercel": "npx esbuild api/index.ts --bundle --platform=node --format=esm --outfile=api/index.js --external:@libsql/client",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.13.0",
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "octokit": "^5.0.5",
    "unique-username-generator": "^1.5.1"
  }
}
